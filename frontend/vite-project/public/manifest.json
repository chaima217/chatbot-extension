{
  "manifest_version": 3,
  "name": "Chatbot Extension",
  "version": "1.0",
  "action": { "default_popup": "index.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "main.js", "styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}
